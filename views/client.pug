extends layout

block content
    .single__hero
        h1= client.name
    .single__details.inner
        .card
            .site__actions
                .site__action.site__action--edit
                    a(href=`/client/${client.slug}/edit`)
                        != h.icon('pencil')
            h2 Contact Info
            ul
                li= client.contactName
                li= client.email
                li= client.phone
            h2 Client Sites
            ul
                each site in client.sites
                    li
                        a(href=`/site/${site._id}`)=site.name


